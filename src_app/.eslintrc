{
    "plugins": [
        "promise",
        //"pureness",
        "import",
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "loris/es6",
        "plugin:react/recommended"
    ],
    "globals": {
        "SyntheticEvent": false,
        "SyntheticKeyboardEvent": false,
        "$Keys": false,
        "$Shape": false,
        "$PropertyType": false,
        "$ElementType": false,
        "expect": false,
        "it": false,
        "describe": false
    },
    "settings": {
        "import/ignore": [
            "node_modules",
            "react-router"
        ],
        "import/resolver": {
            "node": {
                "extensions": ["", ".js.flow", ".js", ".jsx"],
                "moduleDirectory": [
                    "src",
                    "node_modules"
                ]
            }
        },
        "import/parser": "babel-eslint"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "arrowFunctions": true,
            "jsx": true,
            "blockBindings": true,
            "modules": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "object-curly-spacing": [2, "always"],

        "padded-blocks": 0,
        //"no-empty": 0,
        "arrow-parens": 0,
        "no-multiple-empty-lines": 0,
        "quote-props": 0,
        "no-trailing-spaces": 0,
        "no-console": 0,
        "camelcase": 0,
        "eol-last": 0,
        "operator-linebreak": 0,
        "no-multi-spaces": 0,
        "indent": 0,

        //"promise/param-names": 2,
        //"promise/always-return": 2,
        "promise/catch-or-return": 2,

        "react/display-name": 0,
        "react/no-array-index-key": 2,
        "react/no-find-dom-node": 2,
        "react/no-deprecated": 2,
        "react/no-danger": 1,

        "no-use-before-define": "error",
        "max-len": [2, {"code": 1000, "ignoreComments": true}],
        "array-callback-return": 0,

        "no-invalid-this": 0,

        "no-magic-numbers": 0,
        "no-duplicate-imports": 0,

        "class-methods-use-this": 2,
        "curly": 2,
        "no-else-return": 2,
        "eqeqeq": 2,
        "no-eq-null": 2,
        "no-fallthrough": 2,
        "no-lone-blocks": 2,
        "no-new": 2,
        "yoda": 2,
        "init-declarations": 2,
        "no-dupe-class-members": 2,

        "no-unused-expressions": 2,
        "no-unused-labels": 2,
        "no-useless-call": 2,
        "no-useless-concat": 2,
        "no-useless-escape": 2,
        "no-useless-return": 2,
        "no-unused-vars": 2,
        "no-useless-computed-key": 2,
        "no-useless-constructor": 2,
        "no-useless-rename": 2,
        "no-prototype-builtins": 2,

        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty": 2,
        "no-extra-boolean-cast": 2,
        "no-extra-semi": 2,
        "no-unreachable": 2,
        "no-unsafe-negation": 2,
        "valid-typeof": 2,
        "complexity": ["error", { "max": 10 }],
        "dot-notation": 2,
        "no-extend-native": 2,
        "no-extra-bind": 2
    }
}
